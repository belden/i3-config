#!/bin/bash

behavior=${1:-show};

function refresh_i3_status() {
  pkill -SIGRTMIN+11 i3blocks
  #killall -SIGUSR1 i3status 2> /dev/null
}

function i3::status() {
  perl -lne '
    BEGIN { ($estar, $screen) = (1,1) }

    $estar = 0 if /DPMS is Disabled/;
    $screen = 0 if /timeout:\s+0/;

    END {
      if (!$estar) {
        if (!$screen) {
          print "â˜•";
        } else {
          print "???";
        }
      } else {
        print "ðŸ’¤";
      }
    }
  ' <(xset q)
}

case $behavior in
  on | tired)
    xset s on;
    xset +dpms;
    refresh_i3_status;
    ;;
  off | wired)
    xset s off;
    xset -dpms;
    refresh_i3_status;
    ;;
  refresh)
    refresh_i3_status;
    i3::status;
    ;;
  show )
    i3::status;
    ;;
  toggle )
    current=$(i3::status);
    if [[ "$current" == "ðŸ’¤" ]]; then
      $0 off;
    else
      $0 on;
    fi
    ;;
  * )
    ;;
esac
